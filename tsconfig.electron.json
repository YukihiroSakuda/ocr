{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "electron/**/*.ts"
  ]
}
